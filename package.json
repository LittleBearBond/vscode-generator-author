{
    "name": "generator-author",
    "displayName": "generator-author",
    "description": "Automatically add HTML/XML close tag, same as Visual Studio IDE or Sublime Text",
    "version": "0.0.1",
    "publisher": "formulahendry",
    "icon": "images/logo.png",
    "engines": {
        "vscode": "^1.16.0"
    },
    "Programming Languages": [
        "Other",
        "Languages"
    ],
    "keywords": [
        "genrator",
        "author",
        "add",
        "info"
    ],
    "activationEvents": [
        "onCommand:extension.addAuthorInfo"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "extension.addAuthorInfo",
            "title": "Add author Info"
        }],
        "configuration": {
            "type": "object",
            "title": "add author configuration",
            "properties": {
                "generator.author.author": {
                    "type": "string",
                    "default": "[author]",
                    "description": "author name"
                },
                "generator.author.email": {
                    "type": "string",
                    "default": "[example@mail.com]",
                    "description": "email address"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "moment": "^2.22.2"
    }
}
